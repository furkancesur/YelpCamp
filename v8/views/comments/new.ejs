<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
        </div>
        <div class="col-lg-12">
            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group"><input class="form-control" type="text" name="comment[text]" placeholder="text"></div>
                    <div class="form-group"><button class="btn btn-outline-success btn-block">Submit</button></div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
</div>



<%- include("../partials/footer") %>